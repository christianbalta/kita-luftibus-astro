---
export interface Props {
  date: string;
  title: string;
  description: string;
  image: string;
}

const { date, title, description, image } = Astro.props;
---

<article class="bg-white rounded-xl overflow-hidden shadow-default">
  <img src={image} alt={title} class="w-full h-48 object-cover" />
  <div class="p-6">
    <div class="flex items-center space-x-2 text-text-gray text-sm mb-3">
      <i class="fas fa-calendar"></i>
      <span>{date}</span>
    </div>
    <h3 class="font-heading font-semibold text-xl text-header-dark mb-3">
      {title}
    </h3>
    <p class="text-text-gray mb-4">
      {description}
    </p>
    <a href="#" class="text-primary font-semibold hover:underline">
      Mehr lesen â†’
    </a>
  </div>
</article>

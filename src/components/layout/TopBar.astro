import topShape from '../../assets/images/backgrounds/top-bar-shape.png';
import {Image} from 'astro:assets';
---

<div class="hidden md:block relative bg-background-cream text-header-dark py-10 overflow-hidden">
  <!-- Blue wave background -->
  <div class="absolute inset-0 z-0">
    <Image src={topShape} alt="Blaue wellen hintergrund bild" class="w-full h-full object-cover"
           loading="eager"/>

<!-- Persistent bottom-right expandable availability card -->
<div id="free-places-card" class="free-places-card" aria-live="polite">
  <button id="toggle-free-places" class="toggle-btn" aria-expanded="false"
          aria-controls="free-places-panel">
    <span class="dot available mr-2" aria-hidden="true"></span>
    <span class="toggle-label"> Akutelle Plätze</span>
  </button>

  <div id="free-places-panel" class="panel" role="dialog" aria-label="Freie Plätze">
    <div class="panel-header">
      <div class="title">
        <span class="text">Akutelle Plätze</span>
      </div>
      <button id="close-free-places" class="close-btn" aria-label="Schließen">
        <i class="fas fa-times"></i>
      </button>
    </div>

    <div class="panel-content">
      <div class="group">
        <div class="row">
          <span class="dot available" aria-hidden="true"></span>
          <span class="label">Fidibus (3 Monate – 2,5 Jahre)</span>
        </div>
        <div class="row">
          <span class="dot available" aria-hidden="true"></span>
          <span class="label">Wirbelwind (2,5 – 5 Jahre)</span>
        </div>
      </div>

      <a href="/verfuegbare-plaetze-und-anmeldung" class="cta">Jetzt anmelden</a>
    </div>
  </div>
</div>

<style>
  .free-places-card {
    position: fixed;
    right: 1.5rem; /* 24px */
    bottom: 1.5rem;
    z-index: 60;
  }

  .toggle-btn {
    min-height: 3rem; /* ~48px */
    padding: 0 0.875rem;
    border-radius: 9999px;
    background: var(--color-primary, #F39F5F);
    display: flex;
    align-items: center;
    justify-content: center;
    white-space: nowrap;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    transition: transform .15s ease, box-shadow .15s ease;
    border: none;
    cursor: pointer;
  }

  .toggle-label {
    color: #fff;
    font-weight: 600;
    font-size: 0.95rem;
  }

  .toggle-btn:hover {
    transform: translateY(-1px);
    box-shadow: 0 12px 20px -3px rgba(0, 0, 0, 0.12), 0 6px 10px -2px rgba(0, 0, 0, 0.06);
  }

  .panel {
    position: absolute;
    right: 0;
    bottom: 4.25rem; /* sits above the toggle */
    width: 20rem; /* 320px */
    max-width: calc(100vw - 2rem);
    background: #ffffff;
    border-radius: 0.75rem;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    border: 1px solid rgba(0, 0, 0, 0.06);
    overflow: hidden;
    transform-origin: bottom right;
    transform: scale(0.9);
    opacity: 0;
    pointer-events: none;
    transition: opacity .18s ease, transform .18s ease;
  }

  .panel.open {
    opacity: 1;
    transform: scale(1);
    pointer-events: auto;
  }

  .panel-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.75rem 0.75rem 0.5rem 0.75rem;
    background: linear-gradient(135deg, #F39F5F 0%, #E58A44 100%);
    color: #fff;
  }

  .panel-header .title {
    display: flex;
    align-items: center;
    gap: .5rem;
    font-weight: 600;
  }

  .close-btn {
    background: transparent;
    border: none;
    color: #fff;
    cursor: pointer;
    padding: .25rem;
  }

  .panel-content {
    padding: 0.75rem;
  }

  .group {
    display: flex;
    flex-direction: column;
    gap: .5rem;
    margin-bottom: 0.75rem;
  }

  .row {
    display: flex;
    align-items: center;
    gap: .5rem;
    justify-content: space-between;
  }

  .row .label {
    flex: 1;
    color: #334155;
  }

  .row .status {
    color: #16a34a;
    font-weight: 600;
  }

  .dot {
    width: 10px;
    height: 10px;
    border-radius: 9999px;
    display: inline-block;
  }

  .dot.available {
    background-color: #22c55e;
    box-shadow: 0 0 0 0 rgba(34, 197, 94, .7);
    animation: pulse 2s infinite;
  }

  .cta {
    display: inline-block;
    width: 100%;
    text-align: center;
    background: var(--color-primary, #F39F5F);
    color: #fff;
    padding: 0.5rem 0.75rem;
    border-radius: 0.5rem;
    font-weight: 600;
    text-decoration: none;
    transition: filter .15s ease;
  }

  .cta:hover {
    filter: brightness(.95);
  }

  @keyframes pulse {
    0% {
      box-shadow: 0 0 0 0 rgba(34, 197, 94, .7);
    }
    70% {
      box-shadow: 0 0 0 8px rgba(34, 197, 94, 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(34, 197, 94, 0);
    }
  }

  @media (max-width: 640px) {
    .free-places-card {
      right: 1rem;
      bottom: 1rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const toggle = document.getElementById('toggle-free-places');
    const panel = document.getElementById('free-places-panel');
    const close = document.getElementById('close-free-places');

    const open = () => {
      panel?.classList.add('open');
      toggle?.setAttribute('aria-expanded', 'true');
    };
    const closePanel = () => {
      panel?.classList.remove('open');
      toggle?.setAttribute('aria-expanded', 'false');
    };

    toggle?.addEventListener('click', () => {
      if (panel?.classList.contains('open')) {
        closePanel();
      } else {
        open();
      }
    });
    close?.addEventListener('click', closePanel);
  });
</script>
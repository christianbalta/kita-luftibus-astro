---
import Button from '../../common/Button.astro';
import {Image} from 'astro:assets';

import heroPippi from '../../../assets/images/hero/hero-pippi-langstrumpf.png';
import parasuit from '../../../assets//images/decoration/parasuit.png';
import bee from '../../../assets/images/decoration/bee.png';
import bottomShape from '../../../assets/images/backgrounds/bottom-shape.png';
---

<section class="hero-section bg-background-cream relative overflow-hidden">
  <div class="container mx-auto px-4 py-20 lg:py-32">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div class="relative z-10">
        <h1 class="font-family-heading font-bold text-4xl lg:text-7xl text-header-dark mb-6">
          KiTa Luftibus
          <span class="text-primary block">Winterthur</span>
        </h1>
        <p class="text-text-gray text-lg lg:text-xl mb-8 leading-relaxed">
          Die KiTa Luftibus Winterthur ist Ihre Adresse für professionelle und herzliche
          Kinderbetreuung in Winterthur. Bei uns finden Kinder ab 3 Monaten bis zum
          Kindergarteneintritt einen geborgenen Ort zum Spielen, Lernen und Entdecken. Als moderne
          Kindertagesstätte verbinden wir pädagogische Kompetenz mit familiärer
          Atmosphäre.
        </p>
        <Button href="/verfuegbare-plaetze-und-anmeldung">Anmeldung</Button>
      </div>

      <div class="relative">
        <div class="relative z-10">
          <Image
              src={heroPippi}
              alt="Fröhliches Kind"
              class="w-full max-w-md mx-auto"
              loading="eager"
          />
        </div>
        <!-- Decorative elements -->
        <div
            class="absolute -top-4 -left-4 w-8 h-8 bg-secondary-teal rounded-full opacity-60"></div>
        <div
            class="absolute top-20 -right-8 w-12 h-12 bg-secondary-yellow rounded-full opacity-60"></div>
        <div class="absolute -bottom-8 left-12 w-6 h-6 bg-primary rounded-full opacity-60"></div>
      </div>
    </div>
  </div>

  <!-- Floating decorative images - hidden on mobile -->
  <div class="absolute top-1/4 left-8 animate-float hidden md:block">
    <Image
        src={parasuit}
        alt="Heissluft ballon"
        class="w-full h-full"
        loading="eager"
    />
  </div>
  <div class="absolute bottom-1/4 right-8 animate-float hidden md:block"
       style="animation-delay: 1.5s;">
    <Image
        src={bee}
        alt="Bienen"
        class="w-full h-full"
        loading="eager"
    />
  </div>

  <!-- Bottom shape -->
  <div class="absolute bottom-0 left-0 right-0">
    <Image
        src={bottomShape}
        alt="Bottom shape"
    />
  </div>
</section>

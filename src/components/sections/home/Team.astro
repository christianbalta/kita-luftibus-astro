---
import TeamCard from '../../cards/TeamCard.astro';
import {Image} from 'astro:assets';

import topShape from '../../../assets/images/backgrounds/section-top-shape.png';
import mariaBild from '../../../assets/images/team/Maria-team-bild.png';
import stefanieBild from '../../../assets/images/team/Stefanie-team-bild.png';
import nadaBild from '../../../assets/images/team/Nada-team-bild.png';
import franziskaBild from '../../../assets/images/team/Franziska-team-bild.png';

const teamMembers = [
  {
    name: 'Maria',
    role: 'Kitaleitung',
    description: 'Praxisausbildnerin FaBe K & HF, Kleinkindpädagogik, Expertin FaBe K',
    image: mariaBild,
  },
  {
    name: 'Stefanie',
    role: 'Gruppenleiterin',
    description: 'Stv. Kitaleitung',
    image: stefanieBild,
  },
  {
    name: 'Nada',
    role: 'CO Gruppenleiterin',
    description: 'HF Kleinkindpädagogin',
    image: nadaBild,
  },
  {
    name: 'Franziska',
    role: 'Erzieherin',
    description: 'Mitarbeiterin im Qualifikationsverfahren in der Kita Luftibus seit Mai 2024',
    image: franziskaBild,
  }
];
---

<section id="team" class="py-20 lg:py-32 bg-background-cream relative overflow-hidden">
  <!-- Top shape -->
  <div class="absolute top-0 left-0 right-0">
    <Image
        src={topShape}
        alt="Top shape"
    />
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="text-center mb-16">
      <h2 class="font-heading font-bold text-3xl lg:text-5xl text-header-dark mb-4">
        Team Luftibus
      </h2>
      <p class="text-text-gray text-lg max-w-2xl mx-auto">
        Unser engagiertes Team aus erfahrenen Pädagoginnen begleitet Ihr Kind liebevoll durch den Kita-Alltag.
      </p>
    </div>

    <div class="team-slider-container relative max-w-6xl mx-auto px-12">
      <div class="team-slider-wrapper overflow-hidden">
        <div class="team-slider flex transition-transform duration-300 ease-in-out">
          {teamMembers.map(member => (
              <div class="team-slide w-full md:w-1/2 lg:w-1/3 flex-shrink-0 px-4">
                <TeamCard {...member} />
              </div>
          ))}
        </div>
      </div>

      <button class="slider-nav-btn prev absolute top-1/2 left-2 transform -translate-y-1/2 bg-white rounded-full p-2 shadow-md z-20 focus:outline-none hover:bg-gray-50 transition-colors" aria-label="Previous slide">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      </button>

      <button class="slider-nav-btn next absolute top-1/2 right-2 transform -translate-y-1/2 bg-white rounded-full p-2 shadow-md z-20 focus:outline-none hover:bg-gray-50 transition-colors" aria-label="Next slide">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </button>
    </div>
  </div>
</section>

<script>
  import '../../../scripts/teamSlider.ts';
</script>
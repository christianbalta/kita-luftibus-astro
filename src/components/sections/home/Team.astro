import lakshanaBild from '../../../assets/images/team/teamfotos-lakshana.png';
import leonaBild from '../../../assets/images/team/teamfotos-leona.png';
import melindaBild from '../../../assets/images/team/teamfotos-melinda.png';

const teamMembers = [
  {
    name: 'Maria',
    role: 'Kitaleitung',
    description: 'Praxisausbildnerin FaBe K & HF, Kleinkindp채dagogik, Expertin FaBe K',
    image: mariaBild,
  },
  {
    name: 'Stefanie',
    role: 'Gruppenleiterin',
    description: 'Stv. Kitaleitung',
    image: stefanieBild,
  },
  {
    name: 'Nada',
    role: 'CO Gruppenleiterin',
    description: 'HF Kleinkindp채dagogin',
    image: nadaBild,
  },
  {
    name: 'Franziska',
    role: 'Erzieherin',
    description: 'Mitarbeiterin im Qualifikationsverfahren in der KiTa Luftibus seit Mai 2024',
    image: franziskaBild,
  },
  {
    name: 'Gjilfere',
    role: 'Auszubildende',
    description: 'Im dritten Lehrjahr',
    image: gjilfereBild,
  },
  {
    name: 'Marina',
    role: 'Mitarbeiterin',
    description: 'in der Kita Luftibus seit November 2018',
    image: marinaBild,
  },
  {
    name: 'Lakshana',
    role: 'Mitarbeiterin',

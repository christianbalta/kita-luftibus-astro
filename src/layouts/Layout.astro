---
import '../styles/global.css'
import FreePlacesBanner from '../components/sections/home/FreePlacesBanner.astro'

export interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "KiTa Luftibus bietet Kinderbetreuung in Winterthur für Kinder von 3 Monaten bis 5 Jahren. Freie KiTa Plätze verfügbar - jetzt anmelden.",
} = Astro.props;
---

<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8"/>
  <meta name="description" content={description}/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <link rel="icon" type="image/x-icon" href="/favicon.ico"/>
  <!-- Preconnect to external domains -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

  <!-- Load fonts asynchronously for better performance with font-display: swap -->
  <link rel="preload" href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&family=Source+Sans+3:wght@200;300;400;500;600;700;800;900&family=Pangolin&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
  <noscript><link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&family=Source+Sans+3:wght@200;300;400;500;600;700;800;900&family=Pangolin&display=swap" rel="stylesheet"></noscript>
  
  <!-- Preload Font Awesome CSS and load asynchronously -->
  <link rel="preload" href="/css/all.min.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
  <noscript><link rel="stylesheet" href="/css/all.min.css"></noscript>
  
  <!-- Critical CSS inlined -->
  <style>
    :root {
      --color-primary: #F39F5F;
      --color-primary-dark: #E58A44;
      --color-header-dark: #385469;
      --font-family-body: 'Quicksand', sans-serif;
    }
    body { font-family: var(--font-family-body); }
    .font-family-body { font-family: var(--font-family-body); }
  </style>
  
  <meta name="generator" content={Astro.generator}/>
  <title>{title}</title>
  <link rel="sitemap" href="/sitemap-index.xml" />
</head>
<body class="font-family-body">
<slot/>

<!-- Persistent availability card (replaces floating phone button) -->
<FreePlacesBanner />

<script>
  // Smooth scrolling for anchor links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) {
        target.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      }
    });
  });
</script>
</body>
</html>



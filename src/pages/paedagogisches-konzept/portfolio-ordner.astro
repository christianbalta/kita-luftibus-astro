---
import Layout from '../../layouts/Layout.astro';
import TopBar from '../../components/layout/TopBar.astro'
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';
import MobileMenu from '../../components/layout/MobileMenu.astro';
import {Image} from 'astro:assets';

import bus from '../../assets/images/decoration/bus.png';
import regenbogen from '../../assets/images/decoration/frame.png';
import bottomShape from '../../assets/images/backgrounds/bottom-shape.png';
import topShape from '../../assets/images/backgrounds/section-top-shape.png';
import giraffe from '../../assets/images/decoration/giraffe.png';
import pencil from '../../assets/images/decoration/pencil.png';

// Portfolio-Ordner Images
import portfolioOrdnerMain from '../../assets/images/paedagogisches-konzept/portfolio-ordner/Portfolio-ordner.jpeg';
import portfolioBuch from '../../assets/images/paedagogisches-konzept/portfolio-ordner/Portfolio-Ordner-Buch.jpeg';
import portfolioKannstDu from '../../assets/images/paedagogisches-konzept/portfolio-ordner/Portfolio-Ordner-Das-kannst-Du-gut.jpeg';
import portfolioSpielen from '../../assets/images/paedagogisches-konzept/portfolio-ordner/Portfolio-Ordner-Was-Du-gerne-spieltst.jpg';
import portfolioBacken from '../../assets/images/paedagogisches-konzept/portfolio-ordner/portfolio-ordner-backen.jpg';

const portfolioFeatures = [
  {
    icon: 'camera',
    title: 'Fotodokumentation',
    description: 'Wir dokumentieren besondere Momente und Entwicklungsschritte durch aussagekräftige Fotos, die zeigen, wie Ihr Kind wächst und lernt.'
  },
  {
    icon: 'book',
    title: 'Geschichten & Erlebnisse',
    description: 'Kleine Geschichten und Beobachtungen dokumentieren die Fortschritte und besonderen Erlebnisse Ihres Kindes in der Kita.'
  },
  {
    icon: 'chart-line',
    title: 'Entwicklungsbögen',
    description: 'Systematische Dokumentation der individuellen Entwicklung in verschiedenen Bereichen wie Sprache, Motorik und sozialen Kompetenzen.'
  },
  {
    icon: 'palette',
    title: 'Kunstwerke',
    description: 'Die kreativen Werke Ihres Kindes werden sorgfältig gesammelt und zeigen die künstlerische und kreative Entwicklung auf.'
  }
];

const portfolioBenefits = [
  {
    icon: 'heart',
    title: 'Für die Eltern',
    description: 'Eine kostbare Sammlung von Momenten und Entwicklungsschritten, die im hektischen Familienalltag oft unbemerkt bleiben würden.'
  },
  {
    icon: 'child',
    title: 'Für die Kinder',
    description: 'Ein persönliches Erfolgsbuch, das Selbstbewusstsein fördert und den Kindern hilft, ihre eigene Entwicklung zu verstehen und wertzuschätzen.'
  },
  {
    icon: 'graduation-cap',
    title: 'Beim Übergang',
    description: 'Ein wertvolles Abschiedsgeschenk zum Kindergartenstart - eine chronologische Reise durch die Entwicklung Ihres Kindes während seiner Zeit bei uns.'
  }
];
---

<Layout title="Portfolio-Ordner - Pädagogisches Konzept - Kita Luftibus Winterthur" description="Der Portfolio-Ordner dokumentiert die individuelle Entwicklung Ihres Kindes mit Fotos, Geschichten, Entwicklungsbögen und Kunstwerken - ein wertvolles Erinnerungsbuch.">
  <TopBar />
  <Header />
  <MobileMenu />

  <main>
    <!-- Hero Section -->
    <section class="py-20 lg:py-32 relative overflow-hidden bg-background-cream">
      <!-- Floating decorative images - hidden on mobile -->
      <div class="absolute top-8 left-8 animate-float hidden md:block">
        <Image
          src={bus}
          alt="Bus Dekoration"
          class="w-full h-auto"
        />
      </div>
      <div class="absolute bottom-8 right-8 animate-float hidden md:block" style="animation-delay: 1.5s;">
        <Image
          src={regenbogen}
          alt="Regenbogen Dekoration"
          class="w-full h-auto"
        />
      </div>

      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h1 class="font-heading font-bold text-4xl lg:text-6xl text-header-dark mb-6">
            Portfolio-<span class="text-primary">Ordner</span>
          </h1>
          <p class="text-text-gray text-xl max-w-3xl mx-auto leading-relaxed">
            Ein Bildungsbuch voller Erinnerungen - Dokumentation der individuellen Entwicklung Ihres Kindes
          </p>
        </div>
      </div>
      <div class="absolute bottom-0 left-0 right-0">
        <Image
            src={bottomShape}
            alt="Bottom shape"
        />
      </div>
    </section>

    <!-- Main Content Section -->
    <section class="py-20 lg:py-32 bg-background-light relative overflow-hidden">
      <div class="container mx-auto px-4 relative z-10">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center mb-20">
          <!-- Image Side -->
          <div class="relative">
            <div class="relative">
              <!-- Organic shape background -->
              <div class="absolute inset-0 bg-gradient-to-br from-primary/20 to-blue-200/30 rounded-[60px] transform rotate-3"></div>
              <div class="relative bg-white rounded-[50px] p-8 shadow-lg">
                <Image
                  src={portfolioOrdnerMain}
                  alt="Portfolio-Ordner Hauptbild"
                  class="w-full h-80 object-cover rounded-[40px]"
                />
              </div>
            </div>
          </div>

          <!-- Content Side -->
          <div class="space-y-8">
            <div>
              <h2 class="font-heading font-semibold text-3xl lg:text-4xl text-header-dark mb-6">
                Anschauliche <span class="text-primary">Entwicklungsdokumentation</span>
              </h2>
              <p class="text-text-gray text-lg leading-relaxed mb-6">
                So trocken der Name «Portfolio-Ordner» klingt, so anschaulich ist sein Inhalt. In diesem Bildungsbuch dokumentieren wir anhand von Fotos, Geschichten, Entwicklungsbögen und kleinen Kunstwerken, wie sich Ihr Kind bei uns individuell entfaltet.
              </p>
              <p class="text-text-gray text-lg leading-relaxed">
                Die Portfolio-Ordner werden zu lebendigen Gesprächsanlässen zwischen Kindern, Erziehern und Eltern. Sie fördern die Reflexionsfähigkeit und stärken das Bewusstsein der Kinder für ihre eigenen Lernprozesse und Entwicklungsschritte.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Portfolio Features Section -->
    <section class="py-20 bg-background-cream relative overflow-hidden">
      <div class="absolute top-0 left-0 right-0">
        <Image
            src={topShape}
            alt="Top shape"
        />
      </div>

      <!-- Decorative elements -->
      <div class="absolute top-16 left-8 animate-float hidden lg:block">
        <Image
          src={pencil}
          alt="Pencil decoration"
          class="w-full h-auto"
        />
      </div>
      <div class="absolute bottom-16 right-8 animate-float hidden lg:block" style="animation-delay: 1s;">
        <Image
          src={giraffe}
          alt="Giraffe decoration"
          class="w-full h-auto"
        />
      </div>

      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="font-heading font-bold text-3xl lg:text-5xl text-header-dark mb-6">
            Was den Portfolio-Ordner <span class="text-primary">ausmacht</span>
          </h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-20">
          {portfolioFeatures.map(feature => (
            <div class="bg-white rounded-2xl p-8 shadow-default hover:shadow-lg transition-shadow duration-300">
              <div class="flex items-start space-x-4">
                <div class="flex-shrink-0 w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center">
                  <i class={`fas fa-${feature.icon} text-primary text-xl`}></i>
                </div>
                <div>
                  <h3 class="font-heading font-semibold text-xl text-header-dark mb-2">{feature.title}</h3>
                  <p class="text-text-gray leading-relaxed">{feature.description}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Portfolio Gallery Section -->
    <section class="py-20 bg-background-light">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="font-heading font-bold text-3xl lg:text-5xl text-header-dark mb-6">
            Einblicke in den <span class="text-primary">Portfolio-Ordner</span>
          </h2>
          <p class="text-text-gray text-lg max-w-3xl mx-auto">
            Sehen Sie selbst, wie liebevoll und detailliert wir die Entwicklung Ihres Kindes dokumentieren.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
          <!-- Portfolio Book -->
          <div class="bg-white rounded-2xl p-6 shadow-default hover:shadow-lg transition-all duration-300 hover:-translate-y-1">
            <div class="relative mb-4">
              <Image
                src={portfolioBuch}
                alt="Portfolio-Ordner Buch"
                class="w-full h-64 object-cover rounded-xl"
              />
            </div>
            <h3 class="font-heading font-semibold text-lg text-header-dark mb-2">«Deine Lieblingsbücher»</h3>
            <p class="text-text-gray text-sm">Festhalten der Lieblingsbücher in der Kita</p>
          </div>

          <!-- Das kannst Du gut -->
          <div class="bg-white rounded-2xl p-6 shadow-default hover:shadow-lg transition-all duration-300 hover:-translate-y-1">
            <div class="relative mb-4">
              <Image
                src={portfolioKannstDu}
                alt="Das kannst Du gut - Portfolio Seite"
                class="w-full h-64 object-cover rounded-xl"
              />
            </div>
            <h3 class="font-heading font-semibold text-lg text-header-dark mb-2">«Das kannst Du gut»</h3>
            <p class="text-text-gray text-sm">Dokumentation der besonderen Fähigkeiten und Talente jedes Kindes.</p>
          </div>

          <!-- Was Du gerne spielst -->
          <div class="bg-white rounded-2xl p-6 shadow-default hover:shadow-lg transition-all duration-300 hover:-translate-y-1">
            <div class="relative mb-4">
              <Image
                src={portfolioSpielen}
                alt="Was Du gerne spielst - Portfolio Seite"
                class="w-full h-64 object-cover rounded-xl"
              />
            </div>
            <h3 class="font-heading font-semibold text-lg text-header-dark mb-2">«Was Du gerne spielst»</h3>
            <p class="text-text-gray text-sm">Lieblingsspiele und -aktivitäten werden festgehalten und reflektiert.</p>
          </div>
        </div>

        <!-- Additional Image Row -->
        <div class="flex">
          <div class="bg-white rounded-2xl p-6 shadow-default hover:shadow-lg transition-all duration-300 hover:-translate-y-1 max-w-md">
            <div class="relative mb-4">
              <Image
                src={portfolioBacken}
                alt="Portfolio Backen Aktivität"
                class="w-full h-64 object-cover rounded-xl"
              />
            </div>
            <h3 class="font-heading font-semibold text-lg text-header-dark mb-2">Aktivitäten & Projekte</h3>
            <p class="text-text-gray text-sm">Besondere Aktivitäten wie Backen werden fotografisch festgehalten und dokumentiert.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Benefits Section -->
    <section class="py-20 bg-background-cream">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="font-heading font-bold text-3xl lg:text-5xl text-header-dark mb-6">
            Ein <span class="text-primary">Schatz</span> für alle
          </h2>
          <p class="text-text-gray text-lg max-w-3xl mx-auto">
            Der Portfolio-Ordner begleitet Ihr Kind durch seine gesamte Zeit bei uns und wird zum Abschluss zu einem persönlichen Schatz, der die wichtigsten Momente und Meilensteine bewahrt.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {portfolioBenefits.map(benefit => (
            <div class="bg-white rounded-2xl p-8 shadow-default text-center hover:shadow-lg transition-all duration-300 hover:-translate-y-1">
              <div class="w-16 h-16 bg-primary/10 rounded-2xl flex items-center justify-center mx-auto mb-6">
                <i class={`fas fa-${benefit.icon} text-primary text-2xl`}></i>
              </div>
              <h3 class="font-heading font-semibold text-xl text-header-dark mb-4">{benefit.title}</h3>
              <p class="text-text-gray leading-relaxed">{benefit.description}</p>
            </div>
          ))}
        </div>

        <div class="mt-16 text-center">
          <div class="bg-gradient-to-r from-primary/10 to-secondary-teal/10 rounded-2xl p-8 max-w-4xl mx-auto">
            <blockquote class="text-text-gray text-lg italic leading-relaxed">
              «Ach, das ist genau das, was wir immer machen wollten. Aber im Alltag bleibt leider kaum Zeit dazu!»
            </blockquote>
            <p class="text-primary font-semibold mt-4">— Häufige Rückmeldung von Eltern</p>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
